<!DOCTYPE html>
<html>
<head>
  <link rel="icon" type="image/x-icon" href="<%= asset_path('fds_logo_dark.png') %>">
  <title>Fds</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_include_tag 'libs/spark-md5.min' %>
  <%= javascript_include_tag 'jquery.min.js' %>
  <%= javascript_include_tag 'jquery_ujs.js' %>
  <%= javascript_importmap_tags %>
</head>

<body>
<header>

  <nav class="navbar navbar-expand-md navbar-dark bg-dark mb-4">
    <div class="container-fluid">
      <div class="navbar-collapse" id="navbarNav">

        <div class="navbar-nav mr-auto">
          <a class="navbar-brand" href="<%= file_explore_path(dir: "/") %>">
            <img src="<%= asset_path('fds_logo_light.png') %>" alt="Bootstrap" width="54" height="30">
          </a>
          <div class="collapse navbar-collapse" id="navbarCollapse">
            <div class="navbar-nav">
              <a class="nav-link active" aria-current="page" href="<%= file_explore_path(dir: "/") %>">主目录</a>
            </div>
          </div>

        </div>



        <div class="navbar-nav mx-auto">

          <form class="d-flex" role="search">
            <input class="form-control me-2" type="search" placeholder="文件名" aria-label="Search">
            <button class="btn btn-secondary" type="submit">Search</button>
          </form>

        </div>



        <div class="navbar-nav ml-auto">

          <% if user_signed_in? %>

            <div class="dropdown">
              <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                <%= current_user.user_name %>
              </button>
              <ul class="dropdown-menu dropdown-menu-end">
                <li><a class="dropdown-item" href="#">用户信息</a></li>
                <li><a class="dropdown-item" href="#">修改密码</a></li>
                <li><hr class="dropdown-divider"></li>
                <li>
                  <%= link_to "退出登录", destroy_user_session_path, :method => :delete, class: "dropdown-item"%>
                </li>
              </ul>
            </div>

          <% else %>
            <%= link_to "登录", new_session_path(resource_name), class: "btn btn-primary"%>
          <% end %>


        </div>
      </div>
    </div>
  </nav>

</header>


<div id="loadingOverlay" style="display: none;">
  <div id="loadingSpinner"></div>
</div>
<div class="container mt-5">
  <%= render_flash_messages %>
  <%= yield %>
</div>
</body>
</html>

<style>
    #loadingOverlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(252, 252, 252, 0);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 9999;
    }

    #loadingSpinner {
        width: 40px;
        height: 40px;
        border: 4px solid #f3f3f3;
        border-top: 4px solid #3498db;
        border-radius: 50%;
        animation: spin 2s linear infinite;
    }

    @keyframes spin {
        0% {
            transform: rotate(0deg);
        }
        100% {
            transform: rotate(360deg);
        }
    }
</style>

<script>
    $(document).ready(function () {
        $(document).ajaxStart(function () {
            // 显示等待弹框
            $("#loadingOverlay").show();
        });

        $(document).ajaxStop(function () {
            // 隐藏等待弹框
            $("#loadingOverlay").hide();
        });
    })
</script>
